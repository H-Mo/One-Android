<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:id="@+id/rl_click"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_item_thumb"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            />
        <!--<in.leob.one.ui.SmartImageView
            android:id="@+id/img_item_bg"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignBottom="@id/img_item_thumb"
            android:background="#0f0"/>-->
        <TextView
            android:text="名称名称名称名称"
            android:id="@+id/str_item_title"
            android:background="#77000000"
            android:textColor="@color/white"
            android:layout_alignBottom="@id/img_item_thumb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         />
        <TextView
            android:text="VOL VOL"
            android:layout_below="@id/str_item_title"
            android:id="@+id/str_item_hptitle"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>